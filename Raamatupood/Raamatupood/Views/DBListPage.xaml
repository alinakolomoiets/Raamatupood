<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Raamatupood.Views.DBListPage">
    <StackLayout>
        <CollectionView x:Name="raamatList" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout >
                        <Image Source="{Binding RaamatuPilt} " HorizontalOptions="StartAndExpand"/>
                        <Label Text="{Binding RaamatuPealkiri}" FontSize="Medium" TextColor="#7A3712" HorizontalOptions="CenterAndExpand" />
                        <Label Text="{Binding RaamatuAutor}" FontSize="Medium" TextColor="#7A3712" HorizontalOptions="Start" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Lisada uus raamat" Clicked="CreateRaamat" BackgroundColor="DarkCyan"/>
    </StackLayout>
</ContentPage>